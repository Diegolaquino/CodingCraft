@model IEnumerable<CodingCraftoHOMod1Ex1EF.Models.Produto>

@{
    ViewBag.Title = "Produtos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar Produto", "Create")
</p>

<div>  @Html.ActionLink("Carrinho", "Carrinho") </div>

<table class="table" id="tabelaProdutos">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cardinalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cardinalidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ProdutoId }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.ProdutoId })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Vendas", "ListarVendas")
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#tabelaProdutos').DataTable();
    });
</script>